<div class="container mt-5">
  <%= form_with model: [@article, @article.comments.build], local: true do |form| %>
    <div class="mb-4">
      <%= form.label :commenter, class: "form-label" %>
      <%= form.text_field :commenter, class: "form-control" %>
    </div>

    <div class="mb-4">
      <%= form.label :body, "Your Comment", class: "form-label" %>
      <%= form.text_area :body, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= form.submit "Submit Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>