<div class="container mt-4">
  <h1 class="display-4 text-center text-primary">Articles</h1> 
  <p class="text-center text-muted">
    Our blog has <strong><%= Article.public_count %></strong> articles and counting!
  </p>

  <div class="row g-3 text-center">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article, class: "text-decoration-none" %></h5>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
      </br >
  <div class="text-center">
    <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
  </div>
</div>