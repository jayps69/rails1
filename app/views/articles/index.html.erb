<div class="container mt-4">
  <h1 class="display-4 text-center text-primary">Articles</h1> 
  <p class="text-center text-muted">
    Our blog has <strong><%= Article.public_count %></strong> articles and counting!
  </p>

  <div class="row g-3 text-center">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article, class: "text-decoration-none" %>
            </h5>
            <p class="card-text">
              <small>
                Created by: <%= article.user.email %><br>
                Created on: <%= article.created_at.strftime("%B %d, %Y") %>
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
      


<div class="d-flex justify-content-center mt-4 mb-4">
  <%= paginate @articles %>
</div>
